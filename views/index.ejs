<!DOCTYPE html>
<html ng-app="ChatApp">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular.min.js"></script>
    
    <script src="https://cdn.firebase.com/v0/firebase.js"></script>
    <script src="/javascripts/angularfire.min.js"></script>
    <script src="/javascripts/scriptierung.js"></script>
    
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div id="chat" ng-controller="MessagesCtrl">
      <p>{{ greeting }}</p>
      <table class="table">
        <tr ng-repeat="message in messages">
          <td><b>{{message.nick}}</b></td>
          <td colspan="2">{{message.message}}</td>
        </tr>
        <tr>
            <td><input ng-model="newMessage.nick" placeholder="Nick" /></td>
            <td><input ng-model="newMessage.message" class="span6" placeholder="Message text" /></td>
            <td><button ng-click="sendMessage(newMessage)">Send</button></td>
        </tr>
      </table>
    </div>
  </body>
</html>